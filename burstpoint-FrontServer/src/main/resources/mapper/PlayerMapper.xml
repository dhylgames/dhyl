  <update id="updateLastLoginTime" parameterType="com.yd.burst.model.dto.PlayerWallet">
      update bd_player set last_login_time = #{lastLoginTime,jdbcType=VARCHAR} where player_name = #{playerName,jdbcType=VARCHAR}
