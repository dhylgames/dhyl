<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yd.burst.dao.PlayerMapper">
  <resultMap id="BaseResultMap" type="com.yd.burst.model.Player">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="player_name" jdbcType="VARCHAR" property="playerName" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="safe_pwd" jdbcType="VARCHAR" property="safePwd" />
    <result column="real_name" jdbcType="VARCHAR" property="realName" />
    <result column="phone" jdbcType="VARCHAR" property="phone" />
    <result column="last_login_time" jdbcType="VARCHAR" property="lastLoginTime" />
    <result column="user_status" jdbcType="VARCHAR" property="userStatus" />
    <result column="create_time" jdbcType="VARCHAR" property="createTime" />
    <result column="create_by" jdbcType="VARCHAR" property="createBy" />
    <result column="update_time" jdbcType="VARCHAR" property="updateTime" />
    <result column="update_by" jdbcType="VARCHAR" property="updateBy" />
    <result column="player_type" jdbcType="VARCHAR" property="playerType" />
    <result column="level" jdbcType="VARCHAR" property="level" />
    <result column="referrer" jdbcType="VARCHAR" property="referrer" />
  </resultMap>
  <sql id="Base_Column_List">
    id, player_name, password, safe_pwd, real_name, phone, last_login_time, user_status,
    create_time, create_by, update_time, update_by, player_type, level, referrer
  </sql>

  <select id="selectPlayer" parameterType="java.lang.String" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from bd_player
    where player_name = #{playerName,jdbcType=VARCHAR}
  </select>

  <select id="selectByPlayerName" parameterType="java.lang.String" resultType="com.yd.burst.model.dto.PlayerWallet">
    SELECT
        bp.id,
        bp.player_name,
        bp.password,
        bp.user_status,
        bp.player_type,
        bw.total_money,
        bw.avail_money,
        bw.lock_money
    FROM
        bd_player bp
    INNER JOIN
        bd_wallet bw
    on bp.id = bw.player_id AND bp.player_name = #{playerName,jdbcType=VARCHAR};
  </select>

  <select id="selectByPlayerId" parameterType="java.lang.Integer" resultType="com.yd.burst.model.dto.PlayerWallet">
    SELECT
        bp.id,
        bp.player_name,
        bp.password,
        bp.user_status,
        bp.player_type,
        bw.total_money,
        bw.avail_money,
        bw.lock_money
    FROM
        bd_player bp
    INNER JOIN
        bd_wallet bw
    on bp.id = bw.player_id AND bp.id = #{playerId,jdbcType=INTEGER};
  </select>

  <select id="load" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from bd_player
  </select>

  <select id="loadNpcPlayer" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from bd_player where player_type = '1'
  </select>


